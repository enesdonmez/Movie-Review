@model CreateRegisterDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie Kayıt</title>
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <form method="post">
            <h2>Kayıt Ol</h2>
            <div class="input-field">
                <input type="text" name="Name" required>
                <label asp-for="Name">Adınız</label>
            </div>
            <div class="input-field">
                <input type="text" name="Surname" required>
                <label asp-for="Surname">Soyadınız</label>
            </div>
            <div class="input-field">
                <input type="text" name="Username" required>
                <label asp-for="Username">Kullanıcı Adınız</label>
            </div>
            <div class="input-field">
                <input type="text" name="Email" required>
                <label asp-for="Email">Email</label>
            </div>
            <div class="input-field">
                <input type="password" name="Password" required>
                <label asp-for="Password">Şifre</label>
            </div>
           @*  <div class="forget">
                <label for="remember">
                    <input type="checkbox" id="remember">
                    <p>Remember me</p>
                </label>
                <a href="#">Forgot password?</a>
            </div> *@
            <button type="submit">Log In</button>
            <div class="register">
                <p>Zaten hesabınız var mı ? <a href="#">Giriş Yap</a></p>
            </div>
        </form>
    </div>
</body>
</html>